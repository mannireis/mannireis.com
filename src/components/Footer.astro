---
let sha = "unknown";
let url = "https://github.com/mannireis/mannireis.com";

try {
    const response = await fetch(
        "https://api.github.com/repos/mannireis/mannireis.com/commits?per_page=1",
    );
    if (response.ok) {
        const data = await response.json();
        sha = data[0]?.sha?.slice(0, 7) ?? "unknown";
        url = data[0]?.html_url ?? url;
    }
} catch (e) {
    // API fetch failed, use defaults
}
---

<!-- footer component -->
<footer>
    <a href={url}
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-git-commit-vertical-icon lucide-git-commit-vertical"
            ><path d="M12 3v6"></path><circle cx="12" cy="12" r="3"
            ></circle><path d="M12 15v6"></path></svg
        >{sha}</a
    >
    <p>│</p>
    <a href="buttons">buttons</a>
